{
  "manifest_version": 3,
  "name": "ReqRes Proxy Extension",
  "version": "1.1",
  "description": "Make requests to localhost APIs and other hosted domains",
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },

  "browser_specific_settings": {
    "edge": {
      "browser_action_next_to_addressbar": true
    }
  },

  "externally_connectable": {
    "matches": ["https://reqres.saicharanbm.in/*", "http://localhost/*"]
  }
}
